# suppress unregistered keybinds outside default mode
# enabled by default! must be explicitly set to 'off'
khd void_unlisted_bind off

# Enable the prefix mode
khd mode prefix prefix on
khd mode prefix timeout 0.75
khd mode prefix restore default
khd mode default on_enter chunkc border::color 0x99DD0000
khd mode prefix on_enter chunkc border::color 0xFF00FF00

# Activate prefix mode
ctrl - s : khd -e "mode activate prefix"

# reload config
cmd + alt + ctrl - r : khd -e "reload"
cmd + alt - r : pkill chunkwm

# Switch to desktop
# This requires chwm-sa (https://github.com/koekeishiya/chwm-sa)
cmd + alt - 0x0a : chunkc tiling::desktop --focus 1
cmd + alt - 0x12 : chunkc tiling::desktop --focus 2
cmd + alt - 0x13 : chunkc tiling::desktop --focus 3
cmd + alt - 0x14 : chunkc tiling::desktop --focus 4
cmd + alt - 0x15 : chunkc tiling::desktop --focus 5
cmd + alt - 0x17 : chunkc tiling::desktop --focus 6
cmd + alt - 0x16 : chunkc tiling::desktop --focus 7
cmd + alt - 0x1a : chunkc tiling::desktop --focus 8
cmd + alt - 0x1c : chunkc tiling::desktop --focus 9
cmd + alt - 0x19 : chunkc tiling::desktop --focus 10
cmd + alt - 0x1d : chunkc tiling::desktop --focus 11
cmd + alt - 0x1b : chunkc tiling::desktop --focus 12
cmd + alt - 0x18 : chunkc tiling::desktop --focus 13
cmd + alt - 0x33 : chunkc tiling::desktop --focus 14
# Backspace
cmd + alt + ctrl - 0x33 : chunkc tiling::desktop --create
cmd + alt - h : chunkc tiling::desktop --focus prev
cmd + alt - l : chunkc tiling::desktop --focus next

# send window to desktop and try to keep floating state
ctrl + alt - 0x0a : chunkc tiling::window --send-to-desktop 1;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x12 : chunkc tiling::window --send-to-desktop 2;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x13 : chunkc tiling::window --send-to-desktop 3;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x14 : chunkc tiling::window --send-to-desktop 4;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x15 : chunkc tiling::window --send-to-desktop 5;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x17 : chunkc tiling::window --send-to-desktop 6;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x16 : chunkc tiling::window --send-to-desktop 7;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x1a : chunkc tiling::window --send-to-desktop 8;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x1c : chunkc tiling::window --send-to-desktop 9;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x19 : chunkc tiling::window --send-to-desktop 10;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x1d : chunkc tiling::window --send-to-desktop 11;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x1b : chunkc tiling::window --send-to-desktop 12;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x18 : chunkc tiling::window --send-to-desktop 13;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x33 : chunkc tiling::window --send-to-desktop 14;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - h : chunkc tiling::window --send-to-desktop prev;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - l : chunkc tiling::window --send-to-desktop next;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
prefix + ctrl + alt - 0x0a : chunkc tiling::window --send-to-desktop 15;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
prefix + ctrl + alt - 0x12 : chunkc tiling::window --send-to-desktop 16;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;

# send window to monitor and follow focus
ctrl + alt - a  : chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - z  : chunkc tiling::window --send-to-monitor 2; chunkc tiling::monitor -f 2;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - 0x30  : chunkc tiling::window --send-to-monitor 3; chunkc tiling::monitor -f 3;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;
ctrl + alt - e  : chunkc tiling::window --send-to-monitor 4; chunkc tiling::monitor -f 4;chunkc tiling::query --window float | grep 1 && chunkc tiling::window --toggle float;

# increase region size
prefix - h : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
prefix - j : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
prefix - k : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
prefix - l : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

# decrease region size
prefix + shift - h: chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
prefix + shift - j: chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
prefix + shift - k: chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
prefix + shift - l: chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

# rotate tree
alt - r : chunkc tiling::desktop --rotate 90

# toggle window fullscreen
prefix - f : chunkc tiling::window --toggle fullscreen

# toggle window native fullscreen
prefix + shift - f : chunkc tiling::window --toggle native-fullscreen

# float / unfloat window
prefix - w : chunkc tiling::window --toggle float

# Float and center on screen
cmd + shift - space : chunkc tiling::window --toggle float;chunkc tiling::window --grid-layout 8:8:1:1:6:6


